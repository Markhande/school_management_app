<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.UpdateClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/heading_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"

            android:text="Classes"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="0.5"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="|"
            android:gravity="center"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="2dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/classroom_svgrepo_com"
            android:text="Update Class"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/sub_heading_text_size"
        android:layout_marginTop="16dp"
        android:text="Update Class" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class Name"
                app:boxStrokeWidth="2dp"
                app:hintTextAppearance="@style/CustomLabelTextAppearance"
                app:boxStrokeErrorColor="@color/red"
                app:boxBackgroundColor="@color/background_color_textinpulayout"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomStart="@dimen/boxCornerRadiusBottomStart"
                app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd"
                app:boxCornerRadiusTopEnd="@dimen/boxCornerRadiusTopEnd"
                app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvClassTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:hint="class Id"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tution Fees"
                app:boxStrokeWidth="2dp"
                app:hintTextAppearance="@style/CustomLabelTextAppearance"
                app:boxStrokeErrorColor="@color/red"
                app:boxBackgroundColor="@color/background_color_textinpulayout"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomStart="@dimen/boxCornerRadiusBottomStart"
                app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd"
                app:boxCornerRadiusTopEnd="@dimen/boxCornerRadiusTopEnd"
                app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvTutionFeesTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:hint="Fees Discount"
                app:boxStrokeWidth="2dp"
                app:hintTextAppearance="@style/CustomLabelTextAppearance"
                app:boxStrokeErrorColor="@color/red"
                app:boxBackgroundColor="@color/background_color_textinpulayout"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomStart="@dimen/boxCornerRadiusBottomStart"
                app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd"
                app:boxCornerRadiusTopEnd="@dimen/boxCornerRadiusTopEnd"
                app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvFeesDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teacher Name"
                app:boxStrokeWidth="2dp"
                app:hintTextAppearance="@style/CustomLabelTextAppearance"
                app:boxStrokeErrorColor="@color/red"
                app:boxBackgroundColor="@color/background_color_textinpulayout"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomStart="@dimen/boxCornerRadiusBottomStart"
                app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd"
                app:boxCornerRadiusTopEnd="@dimen/boxCornerRadiusTopEnd"
                app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvClassTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/spSelectTeacherUpdateLayout"
                android:visibility="visible"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Teacher"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spAllTeacherName"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:entries="@array/Spinnner_Loading"
                    android:hint="Select Teacher Name"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/categoryConnectionLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Enter Category of Connection"
                    android:padding="5dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/categoryConnectionEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

<!--            <Spinner-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="55dp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20sp"-->
<!--                android:background="@drawable/edit_text_background2"-->
<!--                android:entries="@array/Spinnner_Loading"-->
<!--             -->
<!--                android:hint="Select Teacher Name"/>-->

            <Spinner
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/edit_text_background2"
                android:entries="@array/Spinnner_Loading"
                android:id="@+id/spAllTeacherId"
                android:hint="Select Teacher Name"/>

            <Button
                android:id="@+id/btnUpdateClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/global_button_text_color"
                android:backgroundTint="@color/global_button_background"
                android:text="Update"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>








</LinearLayout>