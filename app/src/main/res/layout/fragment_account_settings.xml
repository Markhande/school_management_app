                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/global_textview_color"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtUsername"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NA"
                                    android:textSize="16sp"
                                    android:textColor="@color/global_textview_color"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/txtPassword"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/global_textview_color"
                                        android:textSize="16sp" />
                                    <ImageView
                                        android:id="@+id/togglePasswordVisibility"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/eyeonpassword"
                                        android:layout_width="20dp"
                                        android:contentDescription="Toggle Password Visibility"
                                        android:layout_height="20dp">
                                    </ImageView>

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/txtDestination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NA"
                                    android:textSize="16sp"
                                    android:textColor="@color/global_textview_color"/>

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txtSubscription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unlimited"
                                    android:textColor="@color/global_textview_color"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/txtActivationDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NA"
                                    android:textSize="16sp"
                                    android:textColor="@color/global_textview_color"/>

                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:visibility="gone"
                            android:id="@+id/btnDeleteAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            android:text="Delete Account"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/baseline_delete_outline_24"
                            android:backgroundTint="#EF5350"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>