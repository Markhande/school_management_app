<!-- res/drawable/rectangle_loader.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top rectangle -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF5733" /> <!-- Top rectangle color -->
            <corners android:radius="50dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Right rectangle -->
    <item android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FF57" /> <!-- Right rectangle color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Bottom rectangle -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#5733FF" /> <!-- Bottom rectangle color -->
            <corners android:radius="50dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Left rectangle -->
    <item android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#5733FF" /> <!-- Left rectangle color -->
            <corners android:radius="50dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Center rectangle (now with gray color) -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#808080" /> <!-- Center color changed to gray -->
                <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            </shape>
        </clip>
    </item>

</layer-list>
